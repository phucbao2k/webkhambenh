extends layout

block content
    h3=title
    div.table-responsive
        form(action='/order/refund', method='POST')
        label Đây là trang hoàn tiền đặt lịch hẹn khám khi bạn đã thanh toán online, nếu bạn chọn thanh toán offline, vui lòng thoát khỏi tab này!
            div.form-group
                label Mã giao dịch (vnp_TxnRef):
                input.form-control(name='orderId')
            div.form-group
                label Số tiền hoàn:
                input.form-control(name='amount')
            div.form-group
                label Kiểu hoàn tiền (vnp_TransactionType):
                select.form-control(name='transType')
                    option(value='02') Hoàn toàn phần
                    option(value='03') Hoàn một phần
            div.form-group
                label Thời gian tạo giao dịch * Ghi theo định dạng năm tháng ngày, viết liền không có dấu cách * (vnp_PayDate)
                input.form-control(name='vnp_PayDate', placeholder='yyyyMMddHHmmss')
            div.form-group
                label User thực hiện hoàn * Nêu rõ lý do hủy * (vnp_CreateBy)
                input.form-control(name='user')
            button.btn.btn-default(type='submit') Refund
    p
